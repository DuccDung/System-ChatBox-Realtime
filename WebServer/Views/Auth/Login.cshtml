<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/css/pages/login/main.css" asp-append-version="true" />
</head>

<body>
    <div class="wrap">
        <main class="main" aria-labelledby="brand">
            <div class="brand" id="brand">
                <div class="brand-title" aria-hidden="true">Facebook</div>

                <div class="card" role="region" aria-label="Khung đăng nhập">
                    <h2>Đăng nhập</h2>

                    <!-- Giữ id form như bạn đang dùng -->
                    <form id="auth_form-login" method="post" autocomplete="on" novalidate>
                        <!-- EMAIL -->
                        <div class="field" id="email-field">
                            <input id="email"
                                   name="email"
                                   type="text"
                                   inputmode="email"
                                   placeholder="Email hoặc số di động"
                                   autocomplete="username"
                                   aria-describedby="email-error" />

                            <svg class="icon-inline icon-alert" viewBox="0 0 24 24" aria-hidden="true">
                                <path fill="currentColor" d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2V9h2v5z" />
                            </svg>

                            <div id="email-error" class="error-text" role="alert" aria-live="polite"></div>
                        </div>

                        <!-- PASSWORD -->
                        <div class="field" id="pass-field">
                            <input id="password"
                                   name="password"
                                   type="password"
                                   placeholder="Mật khẩu"
                                   autocomplete="current-password"
                                   aria-describedby="pass-error" />

                            <button class="icon-btn" id="toggle-pass" type="button"
                                    aria-label="Hiện mật khẩu" aria-pressed="false">
                                <!-- Eye closed -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                     stroke-linecap="round" stroke-linejoin="round" class="eye-closed">
                                    <path d="M10.733 5.076a10.744 10.744 0 0 1 11.205 6.575 1 1 0 0 1 0 .696 10.747 10.747 0 0 1-1.444 2.49" />
                                    <path d="M14.084 14.158a3 3 0 0 1-4.242-4.242" />
                                    <path d="M17.479 17.499a10.75 10.75 0 0 1-15.417-5.151 1 1 0 0 1 0-.696 10.75 10.75 0 0 1 4.446-5.143" />
                                    <path d="m2 2 20 20" />
                                </svg>
                                <!-- Eye open -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                     stroke-linecap="round" stroke-linejoin="round" class="eye-open">
                                    <path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                            </button>

                            <div id="pass-error" class="error-text" role="alert" aria-live="polite"></div>
                        </div>

                        <!-- Remember + forgot -->
                        <div class="row-between">
                            <label class="remember">
                                <input type="checkbox" id="rememberMe" name="rememberMe" value="true" />
                                Nhớ tôi
                            </label>

                            <a class="link link-inline" href="#">Quên mật khẩu?</a>
                        </div>

                        <!-- Submit: đổi về type="submit" để Enter hoạt động -->
                        <button id="form_login_btn_submit" class="btn" type="submit">
                            <span class="btn-text">Đăng nhập</span>
                            <span class="btn-loading">
                                <span class="spinner" aria-hidden="true"></span>
                                Đang đăng nhập...
                            </span>
                        </button>

                        <a class="link" asp-controller="Auth" asp-action="Register">Tạo tài khoản mới</a>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <!-- Overlay -->
    <div id="pageLoading" aria-hidden="true">
        <div class="box">Đang xử lý...</div>
    </div>

    <script type="module" src="@Url.Content("~/js/pages/auth/login.js")" asp-append-version="true"></script>
</body>
</html>
