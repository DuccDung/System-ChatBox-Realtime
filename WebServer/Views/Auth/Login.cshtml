<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/css/pages/login/main.css" asp-append-version="true" />
</head>

<body>
    <div class="wrap">
        <main class="main" aria-labelledby="brand">
            <div class="brand" id="brand">
                <div class="brand-title" aria-hidden="true">facebook</div>
                <div class="card" role="region" aria-label="Khung đăng nhập">
                    <h2>Đăng nhập Facebook</h2>

                    <form id="auth_form-login" method="post" autocomplete="on" novalidate>
                        <!-- Email/phone -->
                        <div class="field" id="email-field">
                            <input id="email" name="email" type="text" inputmode="email"
                                   placeholder="Email hoặc số di động" autocomplete="username" aria-describedby="email-error" />
                            <svg class="icon-inline icon-alert" viewBox="0 0 24 24" aria-hidden="true">
                                <path fill="currentColor" d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2V9h2v5z" />
                            </svg>

                            <!-- text lỗi email (bình thường ẩn) -->
                            <div id="email-error" class="error-text" role="alert" aria-live="polite"></div>
                        </div>

                        <!-- Password + nút con mắt -->
                        <div class="field" id="pass-field">
                            <input id="password" name="password" type="password"
                                   placeholder="Mật khẩu" autocomplete="current-password" aria-describedby="pass-error" />

                            <div class="icon-btn"  id="toggle-pass"  aria-label="Hiện mật khẩu" aria-pressed="false"> </div>
                            <div id="pass-error" class="error-text" role="alert" aria-live="polite"></div>
                        </div>


                        <div style="display:flex;align-items:center;justify-content:space-between;margin:8px 2px 0;">
                            <label style="display:flex;align-items:center;gap:8px;color:var(--muted);font-size:14px;user-select:none;">
                                <input id="rememberMe" name="rememberMe" type="checkbox" value="true" />
                                Nhớ tôi
                            </label>
                            <a class="link" style="margin-top:0" href="#" onclick="return false;">Quên mật khẩu?</a>
                        </div>

                        <button class="btn" id="form_login_btn_submit" style="margin-top:10px;" type="button">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <div id="pageLoading">
        <div class="box">Đang xử lý...</div>
    </div>

    <script type="module" src="@Url.Content("~/js/pages/auth/login.js")" asp-append-version="true"></script>
</body>
</html>
