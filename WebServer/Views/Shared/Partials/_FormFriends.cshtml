
<div class="form_friends">
    <!-- Overlay + Modal -->
    <div class="form_friends__overlay">
        <div class="form_friends__modal"
             role="dialog"
             aria-modal="true"
             aria-labelledby="formFriendsTitle">
            <div class="form_friends__header">
                <h2 class="form_friends__title" id="formFriendsTitle">Thêm bạn</h2>
                <button class="form_friends__icon_btn" aria-label="Đóng">
                    <span class="form_friends__icon_x" aria-hidden="true"></span>
                </button>
            </div>

            <div class="form_friends__body">
                <!-- Search -->
                <div class="form_friends__search_row">
                    <div class="form_friends__country">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="24"
                             height="24"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="#6B7280"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             aria-hidden="true">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                    </div>

                    <!-- Search by email -->
                    <div class="form_friends__field">
                        <input type="email" placeholder="Email" autocomplete="email" />
                    </div>
                </div>

                <!-- Recent results -->
                <div class="form_friends__section">
                    <div class="form_friends__label">Kết quả</div>
                    <div class="form_friends__list">
                        <div class="form_friends__item">
                            <div class="form_friends__avatar">
                                <img alt=""
                                     src="https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?w=200&h=200&fit=crop" />
                            </div>
                            <div class="form_friends__meta">
                                <p class="form_friends__name">Ngô Minh Chung</p>
                                <p class="form_friends__sub">minhchung@example.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form_friends__footer">
                <button class="form_friends__btn form_friends__btn--ghost">
                    Hủy
                </button>
                <button class="form_friends__btn form_friends__btn--filled">
                    Tìm kiếm
                </button>
            </div>
        </div>
    </div>
</div>